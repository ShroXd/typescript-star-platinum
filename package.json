{
  "name": "typescript-star-platinum",
  "version": "0.0.0",
  "description": "ストーン・フリー!",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "test": "jest",
    "lint": "eslint --ext .ts src/**/**.ts",
    "format": "prettier --write --parser typescript src/**/*ts"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm run format",
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.2.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "semantic-release": "^18.0.1",
    "ts-jest": "^27.1.1",
    "tsup": "^5.10.3",
    "typescript": "^4.5.2"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "license": "MIT"
}
