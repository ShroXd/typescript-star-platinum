	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"name": "vscode-jest-tests",
			"request": "launch",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
			// ^^ modified line ^^
			"cwd": "${workspaceFolder}",
			"args": [
				"--runInBand",
				"--watchAll=false"
			]
		}
	]
}